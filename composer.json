{
    "name": "ellgreen/pace",
    "description": "Simple static site generator using Laravel blade",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Ellis Green",
            "email": "devellisper@outlook.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "ext-json": "*",
        "illuminate/support": "^8.0",
        "illuminate/view": "^8.0",
        "symfony/console": "^5.2",
        "symfony/process": "^5.2",
        "mnapoli/front-yaml": "^1.8",
        "league/commonmark": "^1.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "mockery/mockery": "^1.4",
        "mikey179/vfsstream": "^1.6",
        "spatie/phpunit-snapshot-assertions": "^4.2"
    },
    "autoload": {
        "psr-4": {
            "EllGreen\\Pace\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "EllGreen\\Pace\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "@php ./vendor/bin/phpunit"
    }
}
